{% extends "base.html.twig" %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('build/atom-one-dark.css') }}"/>
    <div class="flex-grow-1 d-flex flex-column bg-dark text-light">
        <div class="container-fluid bg-dark text-light">
            <div class="row">
                <div class="p-4 mh-100 mx-auto mt-auto bg-dark text-center" id="content">
                    <h1>Page not found</h1>

                    <p>
                        The requested page couldn't be located. Checkout for any URL
                        misspelling or <a href="{{ path('home') }}">return to the homepage</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    {{ encore_entry_script_tags('code') }}
    {% block javascripts %}
        <script src="{{ asset('build/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
        <script type="text/javascript">
            hljs.initHighlightingOnLoad();
        </script>
    {% endblock %}
{% endblock %}